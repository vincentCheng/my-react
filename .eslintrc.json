{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  // react/jsx-runtime 没添加之前，每一个jsx/tsx页面中都要引用 React，否则报错。
  // 添加之后就不会报错了。
  "plugins": ["react", "@typescript-eslint", "react/jsx-runtime"],
  "rules": {
    "no-undef": "off"
  }
}
